<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/result_item_image"
        android:layout_width="@dimen/search_result_item_size"
        android:layout_height="@dimen/search_result_item_size"
        android:src="@android:drawable/ic_menu_myplaces"
        android:scaleType="center"/>
    <TextView
        android:id="@+id/result_item_title"
        android:layout_alignBottom="@id/result_item_image"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:alpha="0.7"
        android:maxLines="1"/>
</RelativeLayout>